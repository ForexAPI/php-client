{
    "name": "forexapi/client",
    "description": "Forex API Client",
    "keywords": [
        "forex",
        "api",
        "client",
        "exchange",
        "rates",
        "currency",
        "converter"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ForexAPI\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ForexAPI\\Tests\\Client\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jacek Kobus",
            "email": "kobus.jacek@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.42",
        "php-http/mock-client": "^1.6",
        "php-http/message": "^1.16",
        "nyholm/psr7": "^1.8",
        "php-http/discovery": "^1.19",
        "php-http/vcr-plugin": "^1.2",
        "php-http/curl-client": "^2.3",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
